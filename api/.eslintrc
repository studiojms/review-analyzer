{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "prettier/prettier": "error",
        "import/extensions": "warn", // TODO: delete
        "class-methods-use-this": "warn", // TODO: delete
        "no-restricted-syntax": "warn", // TODO: delete
        "no-await-in-loop": "warn" // TODO: delete
    },
    "env": {
        "browser": true,
        "node": true
    }
}